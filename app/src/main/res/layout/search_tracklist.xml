<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="61dp">

    <ImageView
        android:id="@+id/search_tracklist_albumArt"
        android:layout_width="@dimen/AlbumArtWidthHeight"
        android:layout_height="@dimen/AlbumArtWidthHeight"
        android:layout_marginStart="13dp"
        android:layout_marginTop="@dimen/AlbumArtMargin"
        android:layout_marginEnd="@dimen/AlbumArtMargin"
        android:layout_marginBottom="@dimen/AlbumArtMargin"
        android:src="@drawable/baseline_photo_24" />

    <TextView
        android:id="@+id/search_tracklist_songName"
        style="@style/SearchTitle"
        android:layout_width="250dp"
        android:layout_height="19dp"
        android:layout_marginStart="@dimen/SongArtistNameMarginStart"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="28dp"
        android:textColor="@color/search_songName"
        android:textSize="@dimen/SongNameSize" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/SongArtistNameMarginStart"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="@dimen/SongArtistNameMarginEnd"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_tracklist_artistName"
            style="@style/SearchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/search_artistName" />

        <ImageView
            android:layout_width="@dimen/SeparatorPointWidthHeight"
            android:layout_height="@dimen/SeparatorPointWidthHeight"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/separator_point"
            app:tint="@color/search_artistName" />

        <TextView
            android:id="@+id/search_tracklist_songTime"
            style="@style/SearchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/SongArtistNameMarginEnd"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/search_artistName" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/ArrowForwardWidthHeigh"
        android:layout_height="@dimen/ArrowForwardWidthHeigh"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="12dp"
        android:scaleType="center"
        android:src="@drawable/arrow_forward"
        app:tint="@color/search_artistName" />

</FrameLayout>