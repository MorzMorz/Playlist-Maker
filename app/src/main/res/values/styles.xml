<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApp.Light" parent="Theme.Material3.DayNight.NoActionBar">
        <!--<item name="colorPrimary">@color/main_background</item>-->


    </style>

    <style name="ButtonMainStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/SettingsLayoutHeight</item>
        <item name="android:backgroundTint">@color/settings_backgroud</item>
        <item name="android:drawableTint">@color/setting_icon</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:outlineAmbientShadowColor">@color/shadow</item>
        <item name="android:outlineSpotShadowColor">@color/shadow</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:paddingStart">@dimen/SettingsPaddingStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textSize">@dimen/SettingsTextSize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ArrowBack">
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:visibility">visible</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="EditTextStyle" >
        <item name="android:background">@null</item>
    </style>
    
    <style name="AppBar">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:paddingStart">@dimen/PaddingStart</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchTitle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">text</item>
        <item name="android:textSize">@dimen/ArtistNameSize</item>
    </style>
</resources>